                                <label for="star2" title="text"></label>
                                <input type="radio" id="star1" name="rate3" value="1"  disabled />
                                <label for="star1" title="text"></label>
                            {% elseif p.note==4 %}
                                <input type="radio" id="star5" name="rate4" value="5"  disabled />
                                <label for="star5" title="text"></label>
                                <input type="radio" id="star4" name="rate4" value="4" checked  disabled/>
                                <label for="star4" title="text"></label>
                                <input type="radio" id="star3" name="rate4" value="3"  disabled />
                                <label for="star3" title="text"></label>
                                <input type="radio" id="star2" name="rate4" value="2" disabled/>
                                <label for="star2" title="text"></label>
                                <input type="radio" id="star1" name="rate4" value="1"  disabled />
                                <label for="star1" title="text"></label>
                            {% elseif p.note==5 %}
                                <input type="radio" id="star5" name="rate5" value="5" checked  />
                                <label for="star5" title="text"></label>
                                <input type="radio" id="star4" name="rate5" value="4"   disabled/>
                                <label for="star4" title="text"></label>
                                <input type="radio" id="star3" name="rate5" value="3"  disabled />
                                <label for="star3" title="text"></label>
                                <input type="radio" id="star2" name="rate5" value="2" disabled/>
                                <label for="star2" title="text"></label>
                                <input type="radio" id="star1" name="rate5" value="1"  disabled />
                                <label for="star1" title="text"></label>
                            {% endif %}

                        </div>
                        <!-- /TABLE LINK -->



                        <!-- /TABLE LINK -->
                    </div>


                    <!-- /TABLE COLUMN -->
                    <!-- TABLE COLUMN -->
                    <div class="table-column padded-big-left">
                        {% if user.id == p.iduser.id %}

                            <!-- TABLE LINK -->
                            <a class="table-link" href="{{ path('forum_details', { 'id': p.id }) }}">

