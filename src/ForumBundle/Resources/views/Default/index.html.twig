                                <input type="radio" id="star1" name="rate1" value="1" checked disabled />
                                <label for="star1" title="text"></label>
                            {% elseif p.note==2 %}
                                <input type="radio" id="star5" name="rate2" value="5"  disabled />
                                <label for="star5" title="text"></label>
                                <input type="radio" id="star4" name="rate2" value="4"  disabled/>
                                <label for="star4" title="text"></label>
                                <input type="radio" id="star3" name="rate2" value="3" disabled />
                                <label for="star3" title="text"></label>
                                <input type="radio" id="star2" name="rate2" value="2"checked disabled/>
                                <label for="star2" title="text"></label>
                                <input type="radio" id="star1" name="rate2" value="1"  disabled />
                                <label for="star1" title="text"></label>
                            {% elseif p.note==3 %}
