{% extends "@Hunter/Default/index.html.twig" %}
{% block container %}

    <table class="table table-cart split-rows">
        <thead>
        <tr>
            <th>id produit</th>
            <th>nom</th>
            <th>prix</th>
            <th>quantite</th>
            <th>stock</th>
            <th>category</th>
            <th></th>
        </tr>
        </thead>
        <tbody>
        {% for item in items %}
            <tr>
                <td>{{ item.product.id }}</td>
                <td>{{ item.product.name }}</td>
                <td>{{ item.product.price * item.quantity }} TND</td>
                <td>{{ item.quantity }}</td>
                <td>{{ item.product.stock }}</td>
                <td>{{ item.product.category }}</td>
                <td>
                    <a class="button white small-space" href="{{ path('hunter_chartremove',{'id':item.product.id}) }}">delete Item</a>
                </td>
            </tr>
        {% endfor %}
        </tbody>
        <tfoot>
        <tr>
            <td colspan="3" class="text-right">Total :</td>
            <td>{{ total }} TND</td>
            <td>
                <a class="button primary" href="{{ path('hunter_livraison') }}">valider Commande</a>

            </td>
        </tr>

        </tfoot>
    </table>


{% endblock %}